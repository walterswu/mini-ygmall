page {
  background-color: #dedede;
  padding: 20rpx;
}
.search_row {
  height: 60rpx;
  display: flex;
}
.search_row input {
  height: 100%;
  background-color: #fff;
  flex: 5;
  margin-right: 10rpx;
  padding-left: 20rpx;
}
.search_row button {
  flex: 1;
  font-size: 26rpx;
  height: 100%;
  font-size: 28rpx;
  padding: 0;
  margin: 0 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.search_content {
  background-color: #fff;
  margin-top: 20rpx;
}
.search_content .search_item {
  padding: 20rpx 10rpx;
  font-size: 26rpx;
  border-bottom: 1px solid #ccc;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
